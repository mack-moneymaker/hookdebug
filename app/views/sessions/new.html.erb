<% content_for(:title) { "Log In" } %>

<div class="max-w-md mx-auto px-4 py-16">
  <h1 class="text-2xl font-bold text-white text-center mb-8">Log In</h1>

  <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <label class="text-sm text-gray-400 block mb-1">Email</label>
      <%= f.email_field :email, autofocus: true, required: true, class: "bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-3 w-full focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
    </div>
    <div>
      <label class="text-sm text-gray-400 block mb-1">Password</label>
      <%= f.password_field :password, required: true, class: "bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-3 w-full focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
    </div>
    <%= f.submit "Log In", class: "w-full bg-emerald-600 hover:bg-emerald-500 text-white font-semibold py-3 rounded-lg cursor-pointer transition" %>
  <% end %>

  <p class="text-center text-gray-500 text-sm mt-4">
    Don't have an account? <%= link_to "Sign up", signup_path, class: "text-emerald-400 hover:underline" %>
  </p>
</div>
