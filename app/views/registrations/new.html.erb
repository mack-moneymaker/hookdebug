<% content_for(:title) { "Sign Up" } %>

<div class="max-w-md mx-auto px-4 py-16">
  <h1 class="text-2xl font-bold text-white text-center mb-8">Create Account</h1>

  <% if @user.errors.any? %>
    <div class="bg-red-900/50 border border-red-700 text-red-200 rounded-lg p-3 mb-4 text-sm">
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @user, url: signup_path, class: "space-y-4" do |f| %>
    <div>
      <label class="text-sm text-gray-400 block mb-1">Email</label>
      <%= f.email_field :email, autofocus: true, required: true, class: "bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-3 w-full focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
    </div>
    <div>
      <label class="text-sm text-gray-400 block mb-1">Password</label>
      <%= f.password_field :password, required: true, class: "bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-3 w-full focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
    </div>
    <div>
      <label class="text-sm text-gray-400 block mb-1">Confirm Password</label>
      <%= f.password_field :password_confirmation, required: true, class: "bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-3 w-full focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
    </div>
    <%= f.submit "Create Account", class: "w-full bg-emerald-600 hover:bg-emerald-500 text-white font-semibold py-3 rounded-lg cursor-pointer transition" %>
  <% end %>

  <p class="text-center text-gray-500 text-sm mt-4">
    Already have an account? <%= link_to "Log in", login_path, class: "text-emerald-400 hover:underline" %>
  </p>
</div>
