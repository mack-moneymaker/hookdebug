<div class="border-b border-gray-800 hover:bg-gray-800/50 transition" id="request-<%= request.id %>">
  <div class="px-4 py-3 cursor-pointer" onclick="this.nextElementSibling.classList.toggle('hidden')">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <span class="<%= method_color(request.http_method) %> text-xs font-bold px-2 py-0.5 rounded font-mono">
          <%= request.http_method %>
        </span>
        <span class="text-gray-400 text-sm"><%= request.source_ip %></span>
        <span class="text-gray-600 text-xs"><%= request.content_type %></span>
      </div>
      <span class="text-gray-500 text-xs"><%= time_ago_in_words(request.created_at) %> ago</span>
    </div>
  </div>

  <div class="hidden px-4 pb-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- Headers -->
      <div>
        <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Headers</h4>
        <div class="bg-gray-950 rounded-lg p-3 max-h-48 overflow-auto">
          <% request.formatted_headers.each do |key, value| %>
            <div class="text-xs font-mono mb-1">
              <span class="text-emerald-400"><%= key %></span>: <span class="text-gray-300"><%= value %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Query Params -->
      <% if request.formatted_query_params.any? %>
        <div>
          <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Query Parameters</h4>
          <div class="bg-gray-950 rounded-lg p-3">
            <% request.formatted_query_params.each do |key, value| %>
              <div class="text-xs font-mono mb-1">
                <span class="text-yellow-400"><%= key %></span>: <span class="text-gray-300"><%= value %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Body -->
      <% if request.body.present? %>
        <div class="lg:col-span-2">
          <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Body</h4>
          <pre class="bg-gray-950 rounded-lg p-3 text-xs font-mono text-gray-300 overflow-auto max-h-64 whitespace-pre-wrap"><%= request.body %></pre>
        </div>
      <% end %>
    </div>

    <!-- Replay -->
    <div class="mt-3 pt-3 border-t border-gray-800">
      <%= form_with url: replay_path, method: :post, class: "flex gap-2 items-center" do |f| %>
        <%= f.hidden_field :request_id, value: request.id %>
        <%= f.url_field :target_url, placeholder: "https://your-server.com/endpoint", class: "bg-gray-800 border border-gray-700 text-white rounded px-3 py-1.5 text-sm flex-1 font-mono" %>
        <%= f.submit "Replay â†’", class: "bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded text-sm cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
